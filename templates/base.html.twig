<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Listino 2019{% endblock %}</title>
    <link rel="shortcut icon" href={{ asset('../images/favicon.ico') }} type="image/vnd.microsoft.icon"/>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <a class="navbar-brand" href="/"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            {% if famiglie is defined %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">Famiglie</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        {% for famiglia in  famiglie %}
                            <a class="dropdown-item" href="{{ path('articolo_index', {famiglia: famiglia.id}) }}">{{ famiglia.id }}</a>
                        {% endfor %}
                    </div>
                </li>
            {% endif %}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true"
                   aria-expanded="false">Profili</a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'A0'}) }}">Serie A0</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'AZ'}) }}">Serie AZ</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'AS'}) }}">Serie AS</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'X'}) }}">Serie X</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'Y'}) }}">Serie Y</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'K'}) }}">Serie Sprint</a>
                    <a class="dropdown-item" href="{{ path('articolo_index', {serie: 'E'}) }}">Serie EVO</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Clips</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('articolo_index', {classe: 'B6'}) }}">Guarnizioni</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('articolo_index', {classe: 'B8'}) }}">Squadrette</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('articolo_index', {classe: 'B7'}) }}">Accessori</a>
            </li>
        </ul>
        <form class="form-inline mt-2 mt-md-0" action="{{ path('articolo_index') }}">
            <input class="form-control mr-sm-2" type="text" name="codice" placeholder="Codice" aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fas fa-search"></i> Cerca
            </button>
        </form>
    </div>
</nav>


{% block body %}{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
