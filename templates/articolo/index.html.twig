{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <ul class="list-group mb-3">
            {% for articolo in articoli %}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-3 order-md-2 mb-2">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">finitura</span>
                            <span class="badge badge-secondary badge-pill">prezzo</span>
                        </h4>
                        <ul class="list-group mb-3">
                            {% for p in articolo.prodotti %}
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                        <small class="text-muted">{{ p.finitura.descrizione }}</small>
                                    </div>
                                    <span class="text-muted">{{ p.prezzo }} â‚¬</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-md-9 order-md-1 mb-2">
                        <h4>{{ articolo.codice }}</h4>
                        <small class="text-muted">{{ articolo.descrizione }}</small>
                        <img width="100%" src="{{ asset("images/#{random(1, 114)}.jpg") }}"
                             alt="{{ articolo.codice }} immagine" onerror="this.onerror=null;
                                this.src='{{ (asset('images/noimage.jpg')) }}'" />

                    </div>
                </div>

            </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}